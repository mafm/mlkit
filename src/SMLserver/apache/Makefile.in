SHELL=@SHELL@

APXS=@apxs@
ORACLE=@oracle_dir@
ODBC=@odbc@
CC=@CC@
LN=@LN_S@
MKDIR=@top_srcdir@/mkinstalldirs
INSTALL=@INSTALL@
INSTALLDATA=@INSTALL_DATA@
SOURCE=mod_sml.c mod_smllib.c DbCommon.c mailer.c cache.c dnsresolve.c \
       ../HashTable.c ../../Runtime/runtimeSystemKamApSml.o ul.tab.c \
			 lex.yy.c parseul.c
TARGET=mod_sml.la
ORACLELIB=libsmloracle.so.1.0
ODBCLIB=libsmlodbc.so.1.0
CFLAGS= -Wall -std=gnu99

@SET_MAKE@

.PHONY: install all clean oracle installsml oracle_install odbc odbc_install

ALL=${TARGET}
INST=installsml
ifneq (${ORACLE}x,x)
ALL+= oracle 
INST+= oracle_install
endif

ifneq ($(ODBC)x,nox)
ALL+= odbc
INST+= odbc_install
endif

all: ${ALL}

install: $(INST)

${TARGET}: ${SOURCE}
	$(APXS) -Wc,"${CFLAGS}" -c -lresolv -L. ${SOURCE}

oracle: $(ORACLELIB)
odbc: $(ODBCLIB)

$(ORACLELIB): oracle.c
	${CC} ${CFLAGS} -I ${ORACLE}/sdk/include -c -fPIC oracle.c
	${CC} -shared -Wl,-soname,libsmloracle.so.1 -L $(ORACLE) -lclntsh oracle.o -o $(ORACLELIB)

$(ODBCLIB): odbc.c
	$(CC) ${CFLAGS} -c -fPIC odbc.c
	$(CC) -shared -Wl,-soname,libsmlodbc.so.1 -lodbc odbc.o -o $(ODBCLIB)

#	${LN}f libsmloracle.so.1.0 libsmloracle.so.1
#	${LN}f libsmloracle.so.1 libsmloracle.so

installsml: ${TARGET}
#	${APXS} -i -a -n sml mod_sml.la
	$(MKDIR) $(INSTDIR_SMLSERVER)/lib
	$(INSTALL) .libs/mod_sml.so $(INSTDIR_SMLSERVER)/lib

oracle_install: oracle
	$(MKDIR) $(INSTDIR_SMLSERVER)/lib
	$(INSTALL) $(ORACLELIB) $(INSTDIR_SMLSERVER)/lib
	cd $(INSTDIR_SMLSERVER)/lib && ${LN} -f libsmloracle.so.1.0 libsmloracle.so.1
	cd $(INSTDIR_SMLSERVER)/lib && ${LN} -f libsmloracle.so.1 libsmloracle.so

odbc_install: odbc
	$(MKDIR) $(INSTDIR_SMLSERVER)/lib
	$(INSTALL) $(ODBCLIB) $(INSTDIR_SMLSERVER)/lib
	cd $(INSTDIR_SMLSERVER)/lib && ${LN} -f libsmlodbc.so.1.0 libsmlodbc.so.1
	cd $(INSTDIR_SMLSERVER)/lib && ${LN} -f libsmlodbc.so.1 libsmlodbc.so

ul.tab.h: ul.y
	bison -d ul.y

ul.tab.c: ul.tab.h ul.y

lex.yy.c: ul.lex ul.tab.h
	flex -s ul.lex

parseul.c: ul.tab.c

t: ../../CUtils/hashmap.o parseul.o ul.tab.o lex.yy.o ulflat.o
	$(CC) -o t $(CFLAGS) -g ../../CUtils/hashmap.o parseul.o ul.tab.o lex.yy.o ulflat.o

clean: 
	rm -f mod_sml.la libsmloracle.so.1.0 *.o *~ *.lo *.slo libsmlodbc.so.1.0

#include "ri_sim.h"

FORM ID formID_main_ri_sim AT ( 0 0 160 160 )
NOFRAME
USABLE
MENUID menuID_ri_sim
BEGIN
  TITLE "Region Simulator"

  LABEL "Total alloc:12345678901234567890" ID labelID_total_alloc AT (10 20) FONT 0 NONUSABLE
  LABEL "Stat1Num regions:12345678901234567890" ID labelID_stat1 AT (10 PREVBOTTOM+1) FONT 0 NONUSABLE
  LABEL "Stat2Num regions:12345678901234567890" ID labelID_stat2 AT (10 PREVBOTTOM+1) FONT 0 NONUSABLE
  LABEL "Stat2Num regions:12345678901234567890" ID labelID_stat3 AT (10 PREVBOTTOM+1) FONT 0 NONUSABLE

  GRAFFITISTATEINDICATOR AT (145 150)
END

FORM ID formID_sys_info AT ( 0 0 160 160 )
NOFRAME
USABLE
BEGIN
  TITLE "System Information"

  LABEL "Stack" ID labelID_stack AT (10 20) FONT 1 
  LABEL "1234567890123456789012345678901234567890" ID labelID_stack_addr AT (20 PREVBOTTOM+1) FONT 0 NONUSABLE
  LABEL "1234567890123456789012345678901234567890" ID labelID_stack_size AT (20 PREVBOTTOM+1) FONT 0 NONUSABLE

  LABEL "Cards" ID labelID_card AT (10 PREVBOTTOM+1) FONT 1
  LABEL "1234567890123456789012345678901234567890" ID labelID_card_no AT (20 PREVBOTTOM+1) FONT 0 NONUSABLE

  LABEL "Choose card:" ID labelID_card_sel AT (20 PREVBOTTOM+1) FONT 0

  PUSHBUTTON "1" ID pushbottomID_card1 AT (PREVRIGHT+3 PREVTOP AUTO AUTO) GROUP 1
  PUSHBUTTON "2" ID pushbottomID_card2 AT (PREVRIGHT+3 PREVTOP AUTO AUTO) GROUP 1
  PUSHBUTTON "3" ID pushbottomID_card3 AT (PREVRIGHT+3 PREVTOP AUTO AUTO) GROUP 1
  PUSHBUTTON "4" ID pushbottomID_card4 AT (PREVRIGHT+3 PREVTOP AUTO AUTO) GROUP 1
  PUSHBUTTON "5" ID pushbottomID_card5 AT (PREVRIGHT+3 PREVTOP AUTO AUTO) GROUP 1
  PUSHBUTTON "6" ID pushbottomID_card6 AT (PREVRIGHT+3 PREVTOP AUTO AUTO) GROUP 1

  BUTTON "Show card info" ID buttonID_show_card_info AT (CENTER PREVBOTTOM+5 AUTO AUTO)
  BUTTON "Show heap info" ID buttonID_show_heap_info AT (CENTER PREVBOTTOM+5 AUTO AUTO)
  BUTTON "Done"           ID buttonID_sys_info_done AT (CENTER PREVBOTTOM+5 AUTO AUTO)
END


VERSION 1 "1.0"

MENU ID menuID_ri_sim
BEGIN
  PULLDOWN "Commands"
  BEGIN
    MENUITEM "About"   menuitemID_about   "A"
    MENUITEM "Card info" menuitemID_card_info "C"
  END
END

ALERT ID alertID_about
INFORMATION
BEGIN
  TITLE "About Region Simulator"
  MESSAGE "Simulate regions for the PaML project."
  BUTTONS "Done"
END

FORM ID formID_card_info AT (2 2 156 156)
USABLE
MODAL
HELPID helpID_card_info
BEGIN
  TITLE "Card Information"

  LABEL "1234567890123456789012345678901234567890" ID labelID_card_info_no AT (10 20) FONT 1
  LABEL "1234567890123456789012345678901234567890" ID labelID_card_name AT (PREVLEFT PREVBOTTOM+1) FONT 1
  LABEL "1234567890123456789012345678901234567890" ID labelID_manu_name AT (PREVLEFT PREVBOTTOM+1) FONT 1
  LABEL "1234567890123456789012345678901234567890" ID labelID_version AT (PREVLEFT PREVBOTTOM+1) FONT 1
  LABEL "1234567890123456789012345678901234567890" ID labelID_cr_date AT (PREVLEFT PREVBOTTOM+1) FONT 1
  LABEL "1234567890123456789012345678901234567890" ID labelID_ROM_size AT (PREVLEFT PREVBOTTOM+1) FONT 1
  LABEL "1234567890123456789012345678901234567890" ID labelID_RAM_size AT (PREVLEFT PREVBOTTOM+1) FONT 1
  LABEL "1234567890123456789012345678901234567890" ID labelID_free_mem AT (PREVLEFT PREVBOTTOM+1) FONT 1

  BUTTON "Ok" ID buttonID_show_card_no AT (CENTER 140 AUTO AUTO)
END

FORM ID formID_heap_info AT (2 2 156 156)

  LABEL "12345678901234567890123456789012345678901234567890123456789012345678901234567890" ID labelID_num_heaps AT (10 13) FONT 1
  LABEL "12345678901234567890123456789012345678901234567890123456789012345678901234567890" ID labelID_num_RAM_heaps AT (PREVLEFT PREVBOTTOM+1) FONT 1
  LABEL "12345678901234567890123456789012345678901234567890123456789012345678901234567890" ID labelID_heap1 AT (PREVLEFT PREVBOTTOM+1) FONT 1
  LABEL "12345678901234567890123456789012345678901234567890123456789012345678901234567890" ID labelID_heap1d1 AT (20 PREVBOTTOM+1) FONT 0
  LABEL "12345678901234567890123456789012345678901234567890123456789012345678901234567890" ID labelID_heap1d2 AT (20 PREVBOTTOM+1) FONT 0
  LABEL "12345678901234567890123456789012345678901234567890123456789012345678901234567890" ID labelID_heap2 AT (10 PREVBOTTOM+1) FONT 1
  LABEL "12345678901234567890123456789012345678901234567890123456789012345678901234567890" ID labelID_heap2d1 AT (20 PREVBOTTOM+1) FONT 0
  LABEL "12345678901234567890123456789012345678901234567890123456789012345678901234567890" ID labelID_heap2d2 AT (20 PREVBOTTOM+1) FONT 0
  LABEL "12345678901234567890123456789012345678901234567890123456789012345678901234567890" ID labelID_heap3 AT (10 PREVBOTTOM+1) FONT 1
  LABEL "12345678901234567890123456789012345678901234567890123456789012345678901234567890" ID labelID_heap3d1 AT (20 PREVBOTTOM+1) FONT 0
  LABEL "12345678901234567890123456789012345678901234567890123456789012345678901234567890" ID labelID_heap3d2 AT (20 PREVBOTTOM+1) FONT 0

  BUTTON "Ok" ID buttonID_show_heap_no AT (120 140 AUTO AUTO)
END

STRING helpID_card_info "The form shows basic card information.\n"\
	"The Region Simulater is part of the PaML project.\n"\
	"Any complains should be mailed to nh@itu.dk"

